@model AdminDashboard.Models.BlogModel
@{
    ViewData["Title"] = "Create Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-9 col-md-12 px-4 mt-3">

    <h1>
        Create New Blog
    </h1>
    <form asp-action="Create" asp-controller="Blogs" class="row g-3 mt-5" enctype="multipart/form-data">
        <div class="col-md-6">
            <label for="Title" class="form-label">@Html.DisplayNameFor(x=>x.Title):</label>
            <input asp-for="Title" class="form-control" name="Title" id="Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">Upload Card Image</label>
            <input asp-for="CardImage" class="form-control" id="Image" accept="image/*" required />
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">Upload Images</label>
            <input asp-for="Image" class="form-control" id="Image" multiple accept="image/*" required />
        </div>

        

        <div class="mb-3">
            <label for="formFile" class="form-label">Upload Video </label>
            <input asp-for="Video" class="form-control" id="Video" accept="video/mp4" required />
        </div>
        <div class="col-md-6">
            <label for="ShortDescription" class="form-label">@Html.DisplayNameFor(x => x.ShortDescription):</label>
            <textarea asp-for="ShortDescription" class="form-control" id="ShortDescription" required></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label for="BlogMainText" class="form-label">@Html.DisplayNameFor(x=>x.BlogMainText):</label>
            <textarea asp-for="BlogMainText" class="form-control" id="BlogMainText" required></textarea>
            <span asp-validation-for="BlogMainText" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label for="SecondaryDescription" class="form-label">@Html.DisplayNameFor(x => x.SecondaryDescription):</label>
            <textarea asp-for="SecondaryDescription" class="form-control" id="SecondaryDescription" required></textarea>
            <span asp-validation-for="SecondaryDescription" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label for="BlogMainText" class="form-label">@Html.DisplayNameFor(x=>x.IsPublished):</label>
            <div class="col-sm-10">
                <div class="form-check">
                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" name="IsPublished" id="IsPublished" />
                    <span asp-validation-for="IsPublished" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>