@model IEnumerable<ServiceLayer.DTO.BlogModel>
@{
    ViewData["Title"] = "Home Page";
    Layout="~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-9 col-md-12 px-4 mt-3">
    <div class="body-contant">
        <h1 class="mb-5">Hotels Request</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(m=>m.Title)</th>
                    <th scope="col">@Html.DisplayNameFor(m=>m.BlogMainText)</th>
                    <th scope="col">@Html.DisplayNameFor(m=>m.IsDeleted)</th>
                    <th scope="col">@Html.DisplayNameFor(m=>m.IsPublished)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var blog in Model)
                    {
                        <tr>
                            <th scope="row">@blog.Id</th>
                            <td>@blog.Title</td>
                            <td>@blog.BlogMainText</td>
                            <td>@blog.IsDeleted</td>
                            <td>@blog.IsPublished</td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>